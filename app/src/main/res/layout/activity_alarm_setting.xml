<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"
    android:orientation="vertical"
    tools:context=".AlarmSettingActivity"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:headerBackground="@drawable/button_style"
        android:numbersBackgroundColor="@android:color/transparent"
        android:numbersSelectorColor="#FF00FF"
        android:numbersTextColor="@color/colorAccent"
        android:padding="15dp"
        android:timePickerMode="clock">

    </TimePicker>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:layout_margin="10dp"
        android:background="@drawable/button_style"
        android:text="Set alarm"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:layout_margin="10dp"
        android:background="@drawable/button_style"
        android:text="Cancel"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        />

</LinearLayout>